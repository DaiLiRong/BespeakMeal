<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
   assembly="BespeakMeal.Domain"
   namespace="BespeakMeal.Domain.Entities">

  <class name ="User" table="tbl_user">
    <id name="UserId" column ="UserId">
      <generator class ="native"/>
    </id>
    <property name ="UserName"/>
    <property name ="Password"/>
    <property name ="FirstName"/>
    <property name ="LastName"/>
    <property name ="Gender"/>
    <property name ="PhoneNum"/>
    <property name ="Email"/>
    <property name ="CreateTime"/>
    <property name ="SuperUser"/>
    <property name ="Status"/>
    <!-- 一对多关系：User有一个或多个Orders-->
    <set name="Orders" table="Order" generic="true" inverse="true">
      <key column="User" foreign-key="FK_UserOrders"/>
      <one-to-many class="Order"/>
    </set>
  </class>
</hibernate-mapping>